<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.zcs.app.advance"
    android:versionCode="100"
    android:versionName="1.0.0" >

    <uses-sdk
        android:minSdkVersion="8"
        android:targetSdkVersion="17" />

    <uses-permission android:name="android.permission.WAKE_LOCK" />
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.ACCESS_WIFI_STATE" />
    <uses-permission android:name="android.permission.READ_PHONE_STATE" />
    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION" />
    <uses-permission android:name="android.permission.ACCESS_COARSE_LOCATION" />
    <uses-permission android:name="android.permission.WRITE_SETTINGS" />
    <uses-permission android:name="android.permission.CHANGE_CONFIGURATION" />
    <uses-permission android:name="android.permission.RECORD_AUDIO" />
    <uses-permission android:name="android.permission.CHANGE_NETWORK_STATE" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/MZV2Theme" >

        <!-- 启动界面 -->
        <activity
            android:name="com.zcs.app.advance.acts.SplashActivity"
            android:label="@string/app_name"
            android:screenOrientation="portrait"
            android:theme="@android:style/Theme.Holo.Light.NoActionBar.Fullscreen" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <!-- 测试用的空界面 -->
        <activity
            android:name="com.zcs.app.advance.acts.EmptyActivity"
            android:screenOrientation="portrait" />

        <!-- 主界面 -->
        <activity
            android:name="com.zcs.app.advance.acts.MainActivity"
            android:screenOrientation="portrait" />

        <!-- 智力拼图 -->
        <activity
            android:name="com.zcs.app.advance.demo.puzzle.PuzzleActivity"
            android:screenOrientation="portrait" />

        <!-- 头像裁剪 -->
        <activity
            android:name="com.zcs.app.advance.demo.avatar.ClipAvatarActivity"
            android:screenOrientation="portrait" />

        <!-- 头像裁剪结果 -->
        <activity
            android:name="com.zcs.app.advance.demo.avatar.ResultActivity"
            android:screenOrientation="portrait" />
        
        <!-- APP主界面Demo -->
        <activity
            android:name="com.zcs.app.advance.demo.index.IndexHomeActivity"
            android:screenOrientation="portrait" />
        
        <!-- APP主界面Demo -->
        <activity
            android:name="com.zcs.app.advance.demo.scroll.ScrollMenuActivity"
            android:screenOrientation="portrait" />
    </application>

</manifest>